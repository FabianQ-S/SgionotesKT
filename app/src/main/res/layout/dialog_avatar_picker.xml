<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dialog_border_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona un avatar"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/avatar1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:padding="10dp"
            android:background="@drawable/avatar_item_background"
            android:src="@drawable/ic_avatar_1" />

        <ImageView
            android:id="@+id/avatar2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:padding="10dp"
            android:background="@drawable/avatar_item_background"
            android:src="@drawable/ic_avatar_2" />

        <ImageView
            android:id="@+id/avatar3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="10dp"
            android:background="@drawable/avatar_item_background"
            android:src="@drawable/ic_avatar_3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/avatar4"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:padding="10dp"
            android:background="@drawable/avatar_item_background"
            android:src="@drawable/ic_avatar_4" />

        <ImageView
            android:id="@+id/avatar5"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:padding="10dp"
            android:background="@drawable/avatar_item_background"
            android:src="@drawable/ic_avatar_5" />

        <ImageView
            android:id="@+id/avatar6"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="10dp"
            android:background="@drawable/avatar_item_background"
            android:src="@drawable/ic_avatar_6" />

    </LinearLayout>

</LinearLayout>
