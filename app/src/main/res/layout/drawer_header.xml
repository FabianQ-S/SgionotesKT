<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:gravity="bottom"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="40dp"
    android:background="#EFEFEF">

    <FrameLayout
        android:id="@+id/drawer_avatar_container"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/avatar_solid_background">

        <ImageView
            android:id="@+id/drawer_avatar_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_user" />

    </FrameLayout>

    <TextView
        android:id="@+id/drawer_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Usuario Ejemplo"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/drawer_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="usuario@ejemplo.com"
        android:textSize="14sp"
        android:textColor="@color/textSecondary" />

</LinearLayout>
